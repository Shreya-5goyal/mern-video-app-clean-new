# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGIN=https://your-frontend.vercel.app,https://www.your-domain.com

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/webrtc_production?retryWrites=true&w=majority

# JWT Secret (Generate with: openssl rand -base64 64)
JWT_SECRET=your_super_secure_random_jwt_secret_here_minimum_32_characters

# Redis (Optional - for horizontal scaling)
REDIS_URL=redis://username:password@redis-host:6379

# TURN Server (Required for production - 95%+ connection success)
TURN_URL=turn:turn.example.com:3478
TURN_USERNAME=your_turn_username
TURN_PASSWORD=your_turn_password

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OPTIONAL: Third-Party Services
# ============================================

# Monitoring (e.g., Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
ANALYTICS_KEY=your_analytics_key

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
